# Server config
PORT=4000

# Storage (S3-compatible) - required for production
S3_ENDPOINT=
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Azure OpenAI (LLM & Speech-to-text endpoints)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=  # e.g. "gpt-4o" or "gpt-4o-mini" etc.

# TikTok developer app (placeholders; requires review and production scopes)
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=https://your-app.com/auth/tiktok/callback

# Self-hosted transcription (optional local whisper path)
WHISPER_BINARY_PATH=  # e.g. /usr/local/bin/whisper.cpp or model run command

# JWT/Session
JWT_SECRET=replace-me

# Database (optional)
DATABASE_URL=

# Other
NODE_ENV=development
